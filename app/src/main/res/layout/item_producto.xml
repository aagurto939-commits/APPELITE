<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="12dp"
    app:cardCornerRadius="16dp"
    app:cardElevation="8dp"
    android:backgroundTint="@color/white"
    android:foreground="?android:attr/selectableItemBackground"
    android:clickable="true"
    android:focusable="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- HEADER CON CÓDIGO Y ESTADO -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginBottom="8dp">

            <TextView
                android:id="@+id/tvCodigoProducto"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Código: PROD001"
                android:textSize="12sp"
                android:textStyle="bold"
                android:textColor="@color/text_secondary"
                android:padding="6dp"
                android:gravity="center"/>

            <!-- Indicador de stock bajo -->
            <LinearLayout
                android:id="@+id/indicadorStock"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/circle_background"
                android:backgroundTint="@color/success"
                android:padding="6dp"
                android:visibility="gone">

                <ImageView
                    android:layout_width="16dp"
                    android:layout_height="16dp"
                    android:src="@drawable/ic_add"
                    app:tint="@color/white"/>
            </LinearLayout>

            <!-- Indicador de stock bajo -->
            <LinearLayout
                android:id="@+id/indicadorStockBajo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/circle_background"
                android:backgroundTint="@color/warning"
                android:padding="6dp"
                android:visibility="gone">

                <ImageView
                    android:layout_width="16dp"
                    android:layout_height="16dp"
                    android:src="@drawable/ic_remove"
                    app:tint="@color/white"/>
            </LinearLayout>
        </LinearLayout>

        <!-- NOMBRE DEL PRODUCTO -->
        <TextView
            android:id="@+id/tvNombreProducto"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Nombre del producto"
            android:textStyle="bold"
            android:textSize="18sp"
            android:textColor="@color/text_primary"
            android:layout_marginBottom="4dp"/>

        <!-- DESCRIPCIÓN -->
        <TextView
            android:id="@+id/tvDescripcionProducto"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Descripción"
            android:textSize="14sp"
            android:textColor="@color/text_secondary"
            android:layout_marginBottom="12dp"
            android:maxLines="2"
            android:ellipsize="end"/>

        <!-- INFORMACIÓN DE PRECIO Y STOCK -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginBottom="8dp">

            <!-- Precio -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/ic_ventas"
                    app:tint="@color/gold_primary"
                    android:layout_marginEnd="4dp"/>

                <TextView
                    android:id="@+id/tvPrecioProducto"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="S/ 0.00"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="@color/text_primary"/>
            </LinearLayout>

            <!-- Stock -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/ic_cart"
                    app:tint="@color/gold_primary"
                    android:layout_marginEnd="4dp"/>

                <TextView
                    android:id="@+id/tvStockProducto"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Stock: 0"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="@color/text_primary"/>
            </LinearLayout>
        </LinearLayout>

        <!-- INFORMACIÓN ADICIONAL -->
        <TextView
            android:id="@+id/tvMonedaProducto"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Categoría: Sin categoría"
            android:textSize="12sp"
            android:textColor="@color/text_secondary"
            android:layout_marginBottom="12dp"/>

        <!-- BOTONES DE ACCIÓN -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="end">

            <ImageButton
                android:id="@+id/btnEditarProducto"
                android:layout_width="44dp"
                android:layout_height="44dp"
                android:background="@drawable/circle_background"
                android:backgroundTint="@color/success"
                android:src="@drawable/ic_edit"
                app:tint="@color/white"
                android:contentDescription="Editar"
                android:layout_marginEnd="8dp"/>

            <ImageButton
                android:id="@+id/btnEliminarProducto"
                android:layout_width="44dp"
                android:layout_height="44dp"
                android:background="@drawable/circle_background"
                android:backgroundTint="@android:color/holo_red_light"
                android:src="@drawable/ic_delete"
                app:tint="@color/white"
                android:contentDescription="Eliminar"/>
        </LinearLayout>
    </LinearLayout>
</com.google.android.material.card.MaterialCardView>
