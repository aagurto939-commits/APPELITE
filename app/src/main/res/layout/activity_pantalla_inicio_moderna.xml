<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- CONTENEDOR PRINCIPAL -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@color/gray_light">

        <!-- ===== HEADER / TOOLBAR ===== -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:gravity="center_vertical"
            android:background="@drawable/gradient_gold_background"
            android:paddingStart="20dp"
            android:paddingEnd="20dp"
            android:elevation="8dp">

            <ImageButton
                android:id="@+id/btn_menu"
                android:layout_width="44dp"
                android:layout_height="44dp"
                android:background="@drawable/circle_background"
                android:backgroundTint="@color/black"
                android:src="@drawable/ic_menu"
                android:contentDescription="Menú"
                app:tint="@color/gold_primary"
                android:padding="10dp"/>

            <ImageView
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_marginStart="16dp"
                android:src="@drawable/elite"
                android:contentDescription="Logo"/>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginStart="12dp"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Elite Maquinarias SAC"
                    android:textColor="@color/black"
                    android:textSize="20sp"
                    android:textStyle="bold"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Dashboard Principal"
                    android:textColor="@color/text_secondary"
                    android:textSize="12sp"/>
            </LinearLayout>

            <!-- Indicador de estado -->
            <View
                android:layout_width="12dp"
                android:layout_height="12dp"
                android:background="@drawable/circle_background"
                android:backgroundTint="@color/success"
                android:layout_marginEnd="8dp"/>

        </LinearLayout>

        <!-- ===== CONTENIDO SCROLL ===== -->
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:fillViewport="true">

            <GridLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:columnCount="2"
                android:padding="12dp"
                android:alignmentMode="alignBounds"
                android:columnOrderPreserved="false">

                <!-- === Servicios Postventa === -->
                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/cardServicios"
                    android:layout_width="0dp"
                    android:layout_height="160dp"
                    android:layout_columnWeight="1"
                    android:layout_margin="12dp"
                    app:cardCornerRadius="24dp"
                    app:cardElevation="8dp"
                    android:foreground="?android:attr/selectableItemBackground"
                    android:clickable="true"
                    android:focusable="true">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:orientation="vertical"
                        android:background="@drawable/card_gold_background"
                        android:padding="20dp">

                        <!-- Icono con fondo dorado -->
                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:background="@drawable/circle_background"
                            android:backgroundTint="@color/gold_light"
                            android:padding="16dp"
                            android:layout_marginBottom="12dp">

                            <ImageView
                                android:layout_width="48dp"
                                android:layout_height="48dp"
                                android:src="@drawable/calenda"
                                app:tint="@color/black"/>

                        </LinearLayout>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Servicios"
                            android:textColor="@color/text_primary"
                            android:textStyle="bold"
                            android:textSize="16sp"
                            android:layout_marginBottom="4dp"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Postventa"
                            android:textColor="@color/text_secondary"
                            android:textSize="14sp"/>

                    </LinearLayout>
                </com.google.android.material.card.MaterialCardView>

                <!-- === Ventas === -->
                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/cardFacturacion"
                    android:layout_width="0dp"
                    android:layout_height="160dp"
                    android:layout_columnWeight="1"
                    android:layout_margin="12dp"
                    app:cardCornerRadius="24dp"
                    app:cardElevation="8dp"
                    android:foreground="?android:attr/selectableItemBackground"
                    android:clickable="true"
                    android:focusable="true">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:orientation="vertical"
                        android:background="@drawable/card_gold_background"
                        android:padding="20dp">

                        <!-- Icono con fondo dorado -->
                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:background="@drawable/circle_background"
                            android:backgroundTint="@color/gold_light"
                            android:padding="16dp"
                            android:layout_marginBottom="12dp">

                            <ImageView
                                android:layout_width="48dp"
                                android:layout_height="48dp"
                                android:src="@drawable/ventas"
                                app:tint="@color/black"/>

                        </LinearLayout>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Ventas"
                            android:textColor="@color/text_primary"
                            android:textStyle="bold"
                            android:textSize="16sp"
                            android:layout_marginBottom="4dp"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="y Facturación"
                            android:textColor="@color/text_secondary"
                            android:textSize="14sp"/>

                    </LinearLayout>
                </com.google.android.material.card.MaterialCardView>

                <!-- === Clientes === -->
                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/cardClientes"
                    android:layout_width="0dp"
                    android:layout_height="160dp"
                    android:layout_columnWeight="1"
                    android:layout_margin="12dp"
                    app:cardCornerRadius="24dp"
                    app:cardElevation="8dp"
                    android:foreground="?android:attr/selectableItemBackground"
                    android:clickable="true"
                    android:focusable="true">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:orientation="vertical"
                        android:background="@drawable/card_gold_background"
                        android:padding="20dp">

                        <!-- Icono con fondo dorado -->
                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:background="@drawable/circle_background"
                            android:backgroundTint="@color/gold_light"
                            android:padding="16dp"
                            android:layout_marginBottom="12dp">

                            <ImageView
                                android:layout_width="48dp"
                                android:layout_height="48dp"
                                android:src="@drawable/client"
                                app:tint="@color/black"/>

                        </LinearLayout>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Clientes"
                            android:textColor="@color/text_primary"
                            android:textStyle="bold"
                            android:textSize="16sp"
                            android:layout_marginBottom="4dp"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Gestión"
                            android:textColor="@color/text_secondary"
                            android:textSize="14sp"/>

                    </LinearLayout>
                </com.google.android.material.card.MaterialCardView>

                <!-- === Inventario === -->
                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/cardInventario"
                    android:layout_width="0dp"
                    android:layout_height="160dp"
                    android:layout_columnWeight="1"
                    android:layout_margin="12dp"
                    app:cardCornerRadius="24dp"
                    app:cardElevation="8dp"
                    android:foreground="?android:attr/selectableItemBackground"
                    android:clickable="true"
                    android:focusable="true">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:orientation="vertical"
                        android:background="@drawable/card_gold_background"
                        android:padding="20dp">

                        <!-- Icono con fondo dorado -->
                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:background="@drawable/circle_background"
                            android:backgroundTint="@color/gold_light"
                            android:padding="16dp"
                            android:layout_marginBottom="12dp">

                            <ImageView
                                android:layout_width="48dp"
                                android:layout_height="48dp"
                                android:src="@drawable/inventario"
                                app:tint="@color/black"/>

                        </LinearLayout>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Inventario"
                            android:textColor="@color/text_primary"
                            android:textStyle="bold"
                            android:textSize="16sp"
                            android:layout_marginBottom="4dp"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Productos"
                            android:textColor="@color/text_secondary"
                            android:textSize="14sp"/>

                    </LinearLayout>
                </com.google.android.material.card.MaterialCardView>

                <!-- === Proveedores === -->
                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/cardProveedores"
                    android:layout_width="0dp"
                    android:layout_height="160dp"
                    android:layout_columnWeight="1"
                    android:layout_margin="12dp"
                    app:cardCornerRadius="24dp"
                    app:cardElevation="8dp"
                    android:foreground="?android:attr/selectableItemBackground"
                    android:clickable="true"
                    android:focusable="true">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:orientation="vertical"
                        android:background="@drawable/card_gold_background"
                        android:padding="20dp">

                        <!-- Icono con fondo dorado -->
                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:background="@drawable/circle_background"
                            android:backgroundTint="@color/gold_light"
                            android:padding="16dp"
                            android:layout_marginBottom="12dp">

                            <ImageView
                                android:layout_width="48dp"
                                android:layout_height="48dp"
                                android:src="@drawable/empresa"
                                app:tint="@color/black"/>

                        </LinearLayout>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Proveedores"
                            android:textColor="@color/text_primary"
                            android:textStyle="bold"
                            android:textSize="16sp"
                            android:layout_marginBottom="4dp"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Gestión"
                            android:textColor="@color/text_secondary"
                            android:textSize="14sp"/>

                    </LinearLayout>
                </com.google.android.material.card.MaterialCardView>

                <!-- === Deudas === -->
                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/cardDeudas"
                    android:layout_width="0dp"
                    android:layout_height="160dp"
                    android:layout_columnWeight="1"
                    android:layout_margin="12dp"
                    app:cardCornerRadius="24dp"
                    app:cardElevation="8dp"
                    android:foreground="?android:attr/selectableItemBackground"
                    android:clickable="true"
                    android:focusable="true">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:orientation="vertical"
                        android:background="@drawable/card_gold_background"
                        android:padding="20dp">

                        <!-- Icono con fondo dorado -->
                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:background="@drawable/circle_background"
                            android:backgroundTint="@color/gold_light"
                            android:padding="16dp"
                            android:layout_marginBottom="12dp">

                            <ImageView
                                android:layout_width="48dp"
                                android:layout_height="48dp"
                                android:src="@drawable/deudas"
                                app:tint="@color/black"/>

                        </LinearLayout>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Deudas"
                            android:textColor="@color/text_primary"
                            android:textStyle="bold"
                            android:textSize="16sp"
                            android:layout_marginBottom="4dp"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="y Pagos"
                            android:textColor="@color/text_secondary"
                            android:textSize="14sp"/>

                    </LinearLayout>
                </com.google.android.material.card.MaterialCardView>

                <!-- === Balance === -->
                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/cardBalance"
                    android:layout_width="0dp"
                    android:layout_height="160dp"
                    android:layout_columnWeight="1"
                    android:layout_margin="12dp"
                    app:cardCornerRadius="24dp"
                    app:cardElevation="8dp"
                    android:foreground="?android:attr/selectableItemBackground"
                    android:clickable="true"
                    android:focusable="true">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:orientation="vertical"
                        android:background="@drawable/card_gold_background"
                        android:padding="20dp">

                        <!-- Icono con fondo dorado -->
                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:background="@drawable/circle_background"
                            android:backgroundTint="@color/gold_light"
                            android:padding="16dp"
                            android:layout_marginBottom="12dp">

                            <ImageView
                                android:layout_width="48dp"
                                android:layout_height="48dp"
                                android:src="@drawable/ic_stats"
                                app:tint="@color/black"/>

                        </LinearLayout>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Balance"
                            android:textColor="@color/text_primary"
                            android:textStyle="bold"
                            android:textSize="16sp"
                            android:layout_marginBottom="4dp"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Financiero"
                            android:textColor="@color/text_secondary"
                            android:textSize="14sp"/>

                    </LinearLayout>
                </com.google.android.material.card.MaterialCardView>

                <!-- === Reporte === -->
                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/cardReportes"
                    android:layout_width="0dp"
                    android:layout_height="160dp"
                    android:layout_columnWeight="1"
                    android:layout_margin="12dp"
                    app:cardCornerRadius="24dp"
                    app:cardElevation="8dp"
                    android:foreground="?android:attr/selectableItemBackground"
                    android:clickable="true"
                    android:focusable="true">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:orientation="vertical"
                        android:background="@drawable/card_gold_background"
                        android:padding="20dp">

                        <!-- Icono con fondo dorado -->
                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:background="@drawable/circle_background"
                            android:backgroundTint="@color/gold_light"
                            android:padding="16dp"
                            android:layout_marginBottom="12dp">

                            <ImageView
                                android:layout_width="48dp"
                                android:layout_height="48dp"
                                android:src="@drawable/ic_reportes"
                                app:tint="@color/black"/>

                        </LinearLayout>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Reportes"
                            android:textColor="@color/text_primary"
                            android:textStyle="bold"
                            android:textSize="16sp"
                            android:layout_marginBottom="4dp"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Analíticos"
                            android:textColor="@color/text_secondary"
                            android:textSize="14sp"/>

                    </LinearLayout>
                </com.google.android.material.card.MaterialCardView>

                <!-- === Configuración === -->
                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/cardConfiguracion"
                    android:layout_width="0dp"
                    android:layout_height="160dp"
                    android:layout_columnWeight="1"
                    android:layout_margin="12dp"
                    app:cardCornerRadius="24dp"
                    app:cardElevation="8dp"
                    android:foreground="?android:attr/selectableItemBackground"
                    android:clickable="true"
                    android:focusable="true">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:orientation="vertical"
                        android:background="@drawable/card_gold_background"
                        android:padding="20dp">

                        <!-- Icono con fondo dorado -->
                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:background="@drawable/circle_background"
                            android:backgroundTint="@color/gold_light"
                            android:padding="16dp"
                            android:layout_marginBottom="12dp">

                            <ImageView
                                android:layout_width="48dp"
                                android:layout_height="48dp"
                                android:src="@drawable/ic_configuracion"
                                app:tint="@color/black"/>

                        </LinearLayout>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Configuración"
                            android:textColor="@color/text_primary"
                            android:textStyle="bold"
                            android:textSize="16sp"
                            android:layout_marginBottom="4dp"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Sistema"
                            android:textColor="@color/text_secondary"
                            android:textSize="14sp"/>

                    </LinearLayout>
                </com.google.android.material.card.MaterialCardView>

            </GridLayout>
        </ScrollView>

        <!-- ===== BOTTOM NAV DORADO ===== -->
        <com.google.android.material.bottomnavigation.BottomNavigationView
            android:id="@+id/bottom_navigation"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/gold_primary"
            android:elevation="12dp"
            app:itemIconTint="@color/black"
            app:itemTextColor="@color/black"
            app:menu="@menu/bottom_navigation_menu"/>
    </LinearLayout>

    <!-- DRAWER LATERAL -->
    <com.google.android.material.navigation.NavigationView
        android:id="@+id/nav_view"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        android:fitsSystemWindows="true"
        app:headerLayout="@layout/nav_header_main"
        app:menu="@menu/activity_main_drawer"/>
</androidx.drawerlayout.widget.DrawerLayout>
