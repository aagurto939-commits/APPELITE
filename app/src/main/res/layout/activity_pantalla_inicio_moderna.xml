<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	android:layout_width="match_parent"
	android:layout_height="match_parent">

	<!-- Contenido principal -->
	<LinearLayout
		android:layout_width="match_parent"
		android:layout_height="match_parent"
		android:orientation="vertical"
		android:background="#006F8F">

		<!-- Logo y nombre -->
		<LinearLayout
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:orientation="horizontal"
			android:gravity="center_vertical"
			android:padding="24dp">
			<ImageView
				android:layout_width="64dp"
				android:layout_height="64dp"
				android:src="@drawable/logoelite"
				android:contentDescription="Logo Elite Maquinarias" />
			<TextView
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:text="Elite Maquinarias SAC"
				android:textColor="#DFB300"
				android:textSize="22sp"
				android:textStyle="bold"
				android:layout_marginStart="16dp" />
		</LinearLayout>

		<!-- Cards de módulos -->
		<ScrollView
			android:layout_width="match_parent"
			android:layout_height="0dp"
			android:layout_weight="1">
			<LinearLayout
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:orientation="vertical"
				android:padding="16dp">

				<!-- Card: Productos -->
				   <androidx.cardview.widget.CardView
					   android:id="@+id/cardProductos"
					   android:layout_width="match_parent"
					   android:layout_height="wrap_content"
					   android:layout_marginBottom="16dp"
					   app:cardCornerRadius="24dp"
					   app:cardElevation="8dp"
					   android:backgroundTint="#FFFFFF">
					<LinearLayout
						android:layout_width="match_parent"
						android:layout_height="wrap_content"
						android:orientation="horizontal"
						android:gravity="center_vertical"
						android:padding="24dp">
						<ImageView
							android:layout_width="40dp"
							android:layout_height="40dp"
							android:src="@drawable/ic_productos"
							android:tint="#DFB300" />
						<TextView
							android:layout_width="wrap_content"
							android:layout_height="wrap_content"
							android:text="Productos"
							android:textColor="#006F8F"
							android:textSize="18sp"
							android:textStyle="bold"
							android:layout_marginStart="16dp" />
					</LinearLayout>
				</androidx.cardview.widget.CardView>

				<!-- Card: Servicios -->
				   <androidx.cardview.widget.CardView
					   android:id="@+id/cardServicios"
					   android:layout_width="match_parent"
					   android:layout_height="wrap_content"
					   android:layout_marginBottom="16dp"
					   app:cardCornerRadius="24dp"
					   app:cardElevation="8dp"
					   android:backgroundTint="#FFFFFF">
					<LinearLayout
						android:layout_width="match_parent"
						android:layout_height="wrap_content"
						android:orientation="horizontal"
						android:gravity="center_vertical"
						android:padding="24dp">
						<ImageView
							android:layout_width="40dp"
							android:layout_height="40dp"
							android:src="@drawable/ic_machinery"
							android:tint="#DFB300" />
						<TextView
							android:layout_width="wrap_content"
							android:layout_height="wrap_content"
							android:text="Servicios"
							android:textColor="#006F8F"
							android:textSize="18sp"
							android:textStyle="bold"
							android:layout_marginStart="16dp" />
					</LinearLayout>
				</androidx.cardview.widget.CardView>

				<!-- Card: Ventas -->
				   <androidx.cardview.widget.CardView
					   android:id="@+id/cardVentas"
					   android:layout_width="match_parent"
					   android:layout_height="wrap_content"
					   android:layout_marginBottom="16dp"
					   app:cardCornerRadius="24dp"
					   app:cardElevation="8dp"
					   android:backgroundTint="#FFFFFF">
					<LinearLayout
						android:layout_width="match_parent"
						android:layout_height="wrap_content"
						android:orientation="horizontal"
						android:gravity="center_vertical"
						android:padding="24dp">
						<ImageView
							android:layout_width="40dp"
							android:layout_height="40dp"
							android:src="@drawable/ic_ventas"
							android:tint="#DFB300" />
						<TextView
							android:layout_width="wrap_content"
							android:layout_height="wrap_content"
							android:text="Ventas"
							android:textColor="#006F8F"
							android:textSize="18sp"
							android:textStyle="bold"
							android:layout_marginStart="16dp" />
					</LinearLayout>
				</androidx.cardview.widget.CardView>

				<!-- Card: Clientes -->
				   <androidx.cardview.widget.CardView
					   android:id="@+id/cardClientes"
					   android:layout_width="match_parent"
					   android:layout_height="wrap_content"
					   android:layout_marginBottom="16dp"
					   app:cardCornerRadius="24dp"
					   app:cardElevation="8dp"
					   android:backgroundTint="#FFFFFF">
					<LinearLayout
						android:layout_width="match_parent"
						android:layout_height="wrap_content"
						android:orientation="horizontal"
						android:gravity="center_vertical"
						android:padding="24dp">
						<ImageView
							android:layout_width="40dp"
							android:layout_height="40dp"
							android:src="@drawable/ic_clients"
							android:tint="#DFB300" />
						<TextView
							android:layout_width="wrap_content"
							android:layout_height="wrap_content"
							android:text="Clientes"
							android:textColor="#006F8F"
							android:textSize="18sp"
							android:textStyle="bold"
							android:layout_marginStart="16dp" />
					</LinearLayout>
				</androidx.cardview.widget.CardView>

				<!-- Card: Reportes -->
				   <androidx.cardview.widget.CardView
					   android:id="@+id/cardReportes"
					   android:layout_width="match_parent"
					   android:layout_height="wrap_content"
					   android:layout_marginBottom="16dp"
					   app:cardCornerRadius="24dp"
					   app:cardElevation="8dp"
					   android:backgroundTint="#FFFFFF">
					<LinearLayout
						android:layout_width="match_parent"
						android:layout_height="wrap_content"
						android:orientation="horizontal"
						android:gravity="center_vertical"
						android:padding="24dp">
						<ImageView
							android:layout_width="40dp"
							android:layout_height="40dp"
							android:src="@drawable/ic_reports"
							android:tint="#DFB300" />
						<TextView
							android:layout_width="wrap_content"
							android:layout_height="wrap_content"
							android:text="Reportes"
							android:textColor="#006F8F"
							android:textSize="18sp"
							android:textStyle="bold"
							android:layout_marginStart="16dp" />
					</LinearLayout>
				</androidx.cardview.widget.CardView>

				<!-- Card: Saldos -->
				   <androidx.cardview.widget.CardView
					   android:id="@+id/cardSaldos"
					   android:layout_width="match_parent"
					   android:layout_height="wrap_content"
					   android:layout_marginBottom="16dp"
					   app:cardCornerRadius="24dp"
					   app:cardElevation="8dp"
					   android:backgroundTint="#FFFFFF">
					<LinearLayout
						android:layout_width="match_parent"
						android:layout_height="wrap_content"
						android:orientation="horizontal"
						android:gravity="center_vertical"
						android:padding="24dp">
						<ImageView
							android:layout_width="40dp"
							android:layout_height="40dp"
							android:src="@drawable/ic_stats"
							android:tint="#DFB300" />
						<TextView
							android:layout_width="wrap_content"
							android:layout_height="wrap_content"
							android:text="Saldos"
							android:textColor="#006F8F"
							android:textSize="18sp"
							android:textStyle="bold"
							android:layout_marginStart="16dp" />
					</LinearLayout>
				</androidx.cardview.widget.CardView>

				<!-- Card: Pagos -->
				   <androidx.cardview.widget.CardView
					   android:id="@+id/cardPagos"
					   android:layout_width="match_parent"
					   android:layout_height="wrap_content"
					   android:layout_marginBottom="16dp"
					   app:cardCornerRadius="24dp"
					   app:cardElevation="8dp"
					   android:backgroundTint="#FFFFFF">
					<LinearLayout
						android:layout_width="match_parent"
						android:layout_height="wrap_content"
						android:orientation="horizontal"
						android:gravity="center_vertical"
						android:padding="24dp">
						<ImageView
							android:layout_width="40dp"
							android:layout_height="40dp"
							android:src="@drawable/ic_lock"
							android:tint="#DFB300" />
						<TextView
							android:layout_width="wrap_content"
							android:layout_height="wrap_content"
							android:text="Pagos"
							android:textColor="#006F8F"
							android:textSize="18sp"
							android:textStyle="bold"
							android:layout_marginStart="16dp" />
					</LinearLayout>
				</androidx.cardview.widget.CardView>

				<!-- Card: Cotizaciones -->
				   <androidx.cardview.widget.CardView
					   android:id="@+id/cardCotizaciones"
					   android:layout_width="match_parent"
					   android:layout_height="wrap_content"
					   android:layout_marginBottom="16dp"
					   app:cardCornerRadius="24dp"
					   app:cardElevation="8dp"
					   android:backgroundTint="#FFFFFF">
					<LinearLayout
						android:layout_width="match_parent"
						android:layout_height="wrap_content"
						android:orientation="horizontal"
						android:gravity="center_vertical"
						android:padding="24dp">
						<ImageView
							android:layout_width="40dp"
							android:layout_height="40dp"
							android:src="@drawable/ic_stats"
							android:tint="#DFB300" />
						<TextView
							android:layout_width="wrap_content"
							android:layout_height="wrap_content"
							android:text="Cotizaciones"
							android:textColor="#006F8F"
							android:textSize="18sp"
							android:textStyle="bold"
							android:layout_marginStart="16dp" />
					</LinearLayout>
				</androidx.cardview.widget.CardView>

			</LinearLayout>
		</ScrollView>
	</LinearLayout>

	<!-- Menú lateral -->
	<com.google.android.material.navigation.NavigationView
		android:id="@+id/navigationView"
		android:layout_width="wrap_content"
		android:layout_height="match_parent"
		android:layout_gravity="start"
		android:background="#006F8F"
		app:headerLayout="@layout/nav_header_main"
		app:menu="@menu/drawer_menu" />

</androidx.drawerlayout.widget.DrawerLayout>

