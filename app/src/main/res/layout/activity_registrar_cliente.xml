<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/servicios_background"
    tools:context=".RegistrarClienteActivity">

    <!-- HEADER DORADO MODERNO -->
    <LinearLayout
        android:id="@+id/header"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:orientation="horizontal"
        android:background="@drawable/gradient_gold_background"
        android:gravity="center_vertical"
        android:elevation="8dp"
        android:padding="15dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <ImageButton
            android:id="@+id/btnBack"
            android:layout_width="44dp"
            android:layout_height="44dp"
            android:background="@drawable/circle_background"
            android:backgroundTint="@color/black"
            android:src="@drawable/ic_arrow_back"
            android:contentDescription="Volver"
            app:tint="@color/gold_primary"
            android:padding="10dp" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginStart="16dp"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Registro de Cliente"
                android:textColor="@color/black"
                android:textSize="22sp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Datos del Cliente"
                android:textColor="@color/text_secondary"
                android:textSize="14sp" />
        </LinearLayout>
    </LinearLayout>

    <!-- CONTENIDO SCROLLABLE -->
    <ScrollView
        android:id="@+id/scrollViewFormulario"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:fillViewport="true"
        android:clipToPadding="false"
        android:paddingBottom="0dp"
        android:scrollbars="vertical"
        android:fadeScrollbars="false"
        android:isScrollContainer="true"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@id/header"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp"
            android:paddingTop="8dp"
            android:paddingBottom="24dp">

            <!-- CARD PRINCIPAL -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="20dp"
                app:cardElevation="8dp"
                android:backgroundTint="@color/white"
                android:layout_marginHorizontal="8dp"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="16dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="20dp">

                    <!-- Tipo de documento -->
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Tipo de Documento"
                        android:textColor="@color/text_primary"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:layout_marginBottom="8dp"/>

                    <Spinner
                        android:id="@+id/spinnerTipoDocumento"
                        android:layout_width="match_parent"
                        android:layout_height="48dp"
                        android:layout_marginBottom="16dp"
                        android:background="@drawable/spinner_background"
                        android:padding="12dp"
                        android:textColor="@color/text_primary"/>

                    <!-- Número de Documento -->
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Número de Documento"
                        android:textColor="@color/text_primary"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:layout_marginBottom="8dp"/>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginBottom="16dp">

                        <com.google.android.material.textfield.TextInputLayout
                            android:id="@+id/tiNumeroDocumento"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:layout_marginEnd="12dp"
                            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                            app:boxStrokeColor="@color/gold_primary"
                            app:boxCornerRadiusTopStart="16dp"
                            app:boxCornerRadiusTopEnd="16dp"
                            app:boxCornerRadiusBottomStart="16dp"
                            app:boxCornerRadiusBottomEnd="16dp"
                            app:hintTextColor="@color/gold_primary" >

                            <com.google.android.material.textfield.TextInputEditText
                                android:id="@+id/etNumeroDocumento"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:inputType="number"
                                android:textColor="@color/text_primary"
                                android:textSize="16sp"/>
                        </com.google.android.material.textfield.TextInputLayout>

                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/btnBuscarDocumento"
                            android:layout_width="wrap_content"
                            android:layout_height="56dp"
                            android:text="Buscar"
                            android:textStyle="bold"
                            android:textAllCaps="false"
                            android:textColor="@color/white"
                            android:textSize="12sp"
                            app:cornerRadius="16dp"
                            app:backgroundTint="@color/gold_primary"
                            app:icon="@drawable/ic_search"
                            app:iconTint="@color/white"
                            app:iconGravity="textStart"
                            app:iconPadding="4dp"/>
                    </LinearLayout>

                    <!-- Nombre -->
                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/tiNombre"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="16dp"
                        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                        app:boxStrokeColor="@color/gold_primary"
                        app:boxCornerRadiusTopStart="16dp"
                        app:boxCornerRadiusTopEnd="16dp"
                        app:boxCornerRadiusBottomStart="16dp"
                        app:boxCornerRadiusBottomEnd="16dp"
                        app:hintTextColor="@color/gold_primary"
                        android:hint="Nombre Completo">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/etNombre"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:inputType="textPersonName"
                            android:textColor="@color/text_primary"
                            android:textSize="16sp"/>
                    </com.google.android.material.textfield.TextInputLayout>

                    <!-- Teléfono -->
                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/tiTelefono"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="16dp"
                        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                        app:boxStrokeColor="@color/gold_primary"
                        app:boxCornerRadiusTopStart="16dp"
                        app:boxCornerRadiusTopEnd="16dp"
                        app:boxCornerRadiusBottomStart="16dp"
                        app:boxCornerRadiusBottomEnd="16dp"
                        app:hintTextColor="@color/gold_primary"
                        android:hint="Teléfono">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/etTelefono"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:inputType="phone"
                            android:textColor="@color/text_primary"
                            android:textSize="16sp"/>
                    </com.google.android.material.textfield.TextInputLayout>

                    <!-- Correo -->
                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/tiCorreo"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="16dp"
                        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                        app:boxStrokeColor="@color/gold_primary"
                        app:boxCornerRadiusTopStart="16dp"
                        app:boxCornerRadiusTopEnd="16dp"
                        app:boxCornerRadiusBottomStart="16dp"
                        app:boxCornerRadiusBottomEnd="16dp"
                        app:hintTextColor="@color/gold_primary"
                        android:hint="Correo Electrónico">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/etCorreo"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:inputType="textEmailAddress"
                            android:textColor="@color/text_primary"
                            android:textSize="16sp"/>
                    </com.google.android.material.textfield.TextInputLayout>

                    <!-- Dirección -->
                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/tiDireccion"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="20dp"
                        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                        app:boxStrokeColor="@color/gold_primary"
                        app:boxCornerRadiusTopStart="16dp"
                        app:boxCornerRadiusTopEnd="16dp"
                        app:boxCornerRadiusBottomStart="16dp"
                        app:boxCornerRadiusBottomEnd="16dp"
                        app:hintTextColor="@color/gold_primary"
                        android:hint="Dirección">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/etDireccion"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:inputType="textPostalAddress"
                            android:textColor="@color/text_primary"
                            android:textSize="16sp"/>
                    </com.google.android.material.textfield.TextInputLayout>

                    <!-- Botones de acción -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center">

                        <!-- Botón Registrar -->
                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/btnRegistrarCliente"
                            android:layout_width="0dp"
                            android:layout_height="48dp"
                            android:layout_weight="1"
                            android:layout_marginEnd="8dp"
                            android:text="Registrar"
                            android:textStyle="bold"
                            android:textAllCaps="false"
                            android:textColor="@color/white"
                            android:textSize="14sp"
                            app:cornerRadius="24dp"
                            app:backgroundTint="@color/success"
                            app:icon="@drawable/cliente"
                            app:iconTint="@color/white"
                            app:iconGravity="textStart"
                            app:iconPadding="8dp"/>

                        <!-- Botón Cancelar -->
                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/btnCancelarCliente"
                            android:layout_width="0dp"
                            android:layout_height="48dp"
                            android:layout_weight="1"
                            android:layout_marginStart="8dp"
                            android:text="Cancelar"
                            android:textStyle="bold"
                            android:textAllCaps="false"
                            android:textColor="@color/white"
                            android:textSize="14sp"
                            app:cornerRadius="24dp"
                            app:backgroundTint="@android:color/holo_red_light"
                            app:icon="@drawable/ic_arrow_back"
                            app:iconTint="@color/white"
                            app:iconGravity="textStart"
                            app:iconPadding="8dp"/>
                    </LinearLayout>
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>
        </LinearLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>
