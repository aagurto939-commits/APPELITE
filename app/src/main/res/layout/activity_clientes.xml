<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ClientesActivity"
    android:orientation="vertical"
    android:background="#FAFAFA"
    android:padding="20dp">

    <!-- Título con sombra sutil y padding -->
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="75dp"
        app:cardCornerRadius="20dp"
        app:cardElevation="10dp"
        android:layout_marginBottom="20dp"
        android:backgroundTint="#3F51B5">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Clientes"
            android:textSize="25sp"
            android:textStyle="bold"
            android:gravity="center"
            android:textColor="#FFFFFF"
            android:padding="24dp"
            android:fontFamily="sans-serif-medium"/>
    </androidx.cardview.widget.CardView>

    <!-- Botones principales con íconos y texto debajo -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginBottom="24dp">

        <!-- Botón Agregar -->
        <LinearLayout
            android:orientation="vertical"
            android:gravity="center"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content" >
            <com.google.android.material.floatingactionbutton.FloatingActionButton
                android:id="@+id/btnAgregar"
                android:layout_width="56dp"
                android:layout_height="56dp"
                app:backgroundTint="#4CAF50"
                android:src="@android:drawable/ic_input_add"
                app:tint="@android:color/white" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Agregar"
                android:textColor="#4CAF50"
                android:textSize="14sp"
                android:layout_marginTop="6dp"
                android:fontFamily="sans-serif-medium"/>
        </LinearLayout>

        <!-- Botón Editar -->
        <LinearLayout
            android:orientation="vertical"
            android:gravity="center"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content">

            <com.google.android.material.floatingactionbutton.FloatingActionButton
                android:id="@+id/btnEditar"
                android:layout_width="56dp"
                android:layout_height="56dp"
                app:backgroundTint="#2196F3"
                android:src="@android:drawable/ic_menu_edit"
                app:tint="@android:color/white" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Editar"
                android:textColor="#2196F3"
                android:textSize="14sp"
                android:layout_marginTop="6dp"
                android:fontFamily="sans-serif-medium"/>
        </LinearLayout>

        <!-- Botón Eliminar -->
        <LinearLayout
            android:orientation="vertical"
            android:gravity="center"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content">

            <com.google.android.material.floatingactionbutton.FloatingActionButton
                android:id="@+id/btnEliminar"
                android:layout_width="56dp"
                android:layout_height="56dp"
                app:backgroundTint="#F44336"
                android:src="@android:drawable/ic_menu_delete"
                app:tint="@android:color/white" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Eliminar"
                android:textColor="#F44336"
                android:textSize="14sp"
                android:layout_marginTop="6dp"
                android:fontFamily="sans-serif-medium"/>
        </LinearLayout>
    </LinearLayout>

    <!-- Subtítulo Historial -->
    <TextView
        android:id="@+id/tvHistorial"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Historial de Clientes"
        android:textSize="20sp"
        android:textColor="#455A64"
        android:textStyle="bold"
        android:layout_marginBottom="12dp"
        android:fontFamily="sans-serif-medium"/>

    <!-- RecyclerView dentro de CardView con esquinas y sombra -->
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        app:cardCornerRadius="16dp"
        app:cardElevation="8dp"
        android:background="#FFFFFF">

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rcClientes"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="12dp" />
    </androidx.cardview.widget.CardView>

</LinearLayout>