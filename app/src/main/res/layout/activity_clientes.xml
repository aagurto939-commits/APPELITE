<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/servicios_background"
    tools:context=".ClientesActivity">

    <!-- HEADER DORADO MODERNO -->
    <LinearLayout
        android:id="@+id/header"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:orientation="horizontal"
        android:background="@drawable/gradient_gold_background"
        android:gravity="center_vertical"
        android:elevation="8dp"
        android:padding="15dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <ImageButton
            android:id="@+id/btnBack"
            android:layout_width="44dp"
            android:layout_height="44dp"
            android:background="@drawable/circle_background"
            android:backgroundTint="@color/black"
            android:src="@drawable/ic_arrow_back"
            android:contentDescription="Volver"
            app:tint="@color/gold_primary"
            android:padding="10dp" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginStart="16dp"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Clientes"
                android:textColor="@color/black"
                android:textSize="22sp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Gestión de Clientes"
                android:textColor="@color/text_secondary"
                android:textSize="14sp" />

        </LinearLayout>
    </LinearLayout>

    <!-- CONTENIDO SCROLLABLE -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:fillViewport="true"
        app:layout_constraintTop_toBottomOf="@id/header"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- Contador de clientes -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnTotalClientes"
                style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:layout_marginBottom="12dp"
                android:text="Total Clientes: 0"
                android:textStyle="bold"
                android:textAllCaps="false"
                android:textColor="@color/gold_primary"
                android:textSize="14sp"
                app:cornerRadius="24dp"
                app:strokeColor="@color/gold_primary"
                app:strokeWidth="2dp"
                app:icon="@drawable/cliente"
                app:iconTint="@color/gold_primary"
                app:iconGravity="textStart"
                app:iconPadding="8dp"/>

            <!-- Botón agregar cliente -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnAgregar"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:layout_marginBottom="20dp"
                android:text="+ Nuevo Cliente"
                android:textStyle="bold"
                android:textAllCaps="false"
                android:textColor="@color/white"
                android:textSize="14sp"
                app:cornerRadius="24dp"
                app:backgroundTint="@color/success"
                app:icon="@drawable/ic_add"
                app:iconTint="@color/white"
                app:iconGravity="textStart"
                app:iconPadding="8dp"/>

            <!-- Buscador flotante -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="24dp"
                app:cardElevation="8dp"
                android:backgroundTint="@color/white"
                android:layout_marginBottom="16dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:padding="16dp">

                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@drawable/ic_search"
                        app:tint="@color/gold_primary"
                        android:layout_marginEnd="12dp"/>

                    <EditText
                        android:id="@+id/etBuscarCliente"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:background="@android:color/transparent"
                        android:hint="Buscar clientes..."
                        android:textColor="@color/text_primary"
                        android:textColorHint="@color/text_secondary"
                        android:textSize="16sp"
                        android:inputType="text"
                        android:imeOptions="actionSearch"/>

                    <ImageButton
                        android:id="@+id/btnLimpiarBusqueda"
                        android:layout_width="32dp"
                        android:layout_height="32dp"
                        android:background="@drawable/circle_background"
                        android:backgroundTint="@color/text_secondary"
                        android:src="@drawable/ic_remove"
                        app:tint="@color/white"
                        android:contentDescription="Limpiar"
                        android:visibility="gone"/>
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- Lista de Clientes -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Lista de Clientes"
                android:textSize="18sp"
                android:textColor="@color/text_primary"
                android:textStyle="bold"
                android:layout_marginBottom="12dp"/>

            <!-- RecyclerView moderno -->
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rcClientes"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="84dp"
                tools:listitem="@layout/item_cliente"/>

        </LinearLayout>

    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>