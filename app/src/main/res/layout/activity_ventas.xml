<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="24dp">

        <EditText
            android:id="@+id/etBuscarCliente"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:hint="Ingrese RUC o DNI del cliente"
            android:textColorHint="#406DE1"
            android:textColor="#000"
            android:textSize="18sp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

        <TextView
            android:id="@+id/tvNombreCliente"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Nombre del cliente: "
            android:textColor="#406DE1"
            android:textSize="16sp"
            app:layout_constraintTop_toBottomOf="@id/etBuscarCliente"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="8dp"/>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rvVentaProductos"
            android:layout_width="0dp"
            android:layout_height="200dp"
            app:layout_constraintTop_toBottomOf="@id/tvNombreCliente"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="16dp"/>

        <TextView
            android:id="@+id/tvTotalVenta"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Total: S/ 0.00"
            android:textColor="#27ae60"
            android:textSize="18sp"
            android:textStyle="bold"
            app:layout_constraintTop_toBottomOf="@id/rvVentaProductos"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="16dp"/>

        <RadioGroup
            android:id="@+id/rgMonedaVenta"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/tvTotalVenta"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:orientation="horizontal"
            android:layout_marginTop="12dp">
            <RadioButton
                android:id="@+id/rbSolesVenta"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Soles (PEN)"/>
            <RadioButton
                android:id="@+id/rbDolaresVenta"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Dólares (USD)"/>
        </RadioGroup>

        <Button
            android:id="@+id/btnGuardarVenta"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Guardar Cotización"
            android:backgroundTint="#406DE1"
            android:textColor="#fff"
            app:layout_constraintTop_toBottomOf="@id/rgMonedaVenta"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="24dp"/>

    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>