<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/servicios_background">

    <!-- Header dorado moderno -->
    <LinearLayout
        android:id="@+id/layoutHeader"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:orientation="horizontal"
        android:background="@drawable/gradient_gold_background"
        android:gravity="center_vertical"
        android:elevation="8dp"
        android:padding="15dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <ImageButton
            android:id="@+id/btnBack"
            android:layout_width="44dp"
            android:layout_height="44dp"
            android:background="@drawable/circle_background"
            android:backgroundTint="@color/black"
            android:src="@drawable/ic_arrow_back"
            android:contentDescription="Volver"
            app:tint="@color/gold_primary"
            android:padding="10dp" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginStart="16dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tvTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Cotizaciones"
                android:textColor="@color/black"
                android:textSize="22sp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Gestión de cotizaciones"
                android:textColor="@color/text_secondary"
                android:textSize="14sp" />

        </LinearLayout>

        <ImageButton
            android:id="@+id/btnAddCotizacion"
            android:layout_width="44dp"
            android:layout_height="44dp"
            android:background="@drawable/circle_background"
            android:backgroundTint="@color/black"
            android:src="@drawable/ic_add"
            android:contentDescription="Nueva Cotización"
            app:tint="@color/gold_primary"
            android:padding="10dp" />

    </LinearLayout>

    <!-- Filtros modernos -->
    <LinearLayout
        android:id="@+id/layoutFiltros"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:orientation="horizontal"
        android:background="@color/white"
        android:elevation="4dp"
        android:paddingHorizontal="12dp"
        android:paddingVertical="8dp"
        app:layout_constraintTop_toBottomOf="@id/layoutHeader"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <Button
            android:id="@+id/btnTodas"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_marginHorizontal="2dp"
            android:text="Todas"
            android:textColor="@color/black"
            android:textSize="12sp"
            android:background="@drawable/button_gold_background"
            android:textAllCaps="false" />

        <Button
            android:id="@+id/btnPendientes"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_marginHorizontal="2dp"
            android:text="Pendientes"
            android:textColor="@color/text_primary"
            android:textSize="12sp"
            android:background="@drawable/edittext_modern_background"
            android:textAllCaps="false" />

        <Button
            android:id="@+id/btnAceptadas"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_marginHorizontal="2dp"
            android:text="Aceptadas"
            android:textColor="@color/text_primary"
            android:textSize="12sp"
            android:background="@drawable/edittext_modern_background"
            android:textAllCaps="false" />

        <Button
            android:id="@+id/btnVencidas"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_marginHorizontal="2dp"
            android:text="Vencidas"
            android:textColor="@color/text_primary"
            android:textSize="12sp"
            android:background="@drawable/edittext_modern_background"
            android:textAllCaps="false" />

    </LinearLayout>

    <!-- Contenido principal con ScrollView -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/layoutFiltros"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:fillViewport="true">

        <FrameLayout
            android:id="@+id/frameContent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <!-- Lista de cotizaciones -->
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recyclerCotizaciones"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="16dp"
                android:clipToPadding="false"
                android:paddingBottom="90dp" />

            <!-- Estado vacío -->
            <LinearLayout
                android:id="@+id/layoutEmptyState"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center"
                android:visibility="gone"
                android:padding="32dp">

                <LinearLayout
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:background="@drawable/circle_background"
                    android:backgroundTint="@color/gold_light"
                    android:gravity="center"
                    android:layout_marginBottom="16dp">

                    <ImageView
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:src="@drawable/ic_assignment"
                        app:tint="@color/black" />

                </LinearLayout>

                <TextView
                    android:id="@+id/tvEmpty"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="No hay cotizaciones"
                    android:textColor="@color/text_primary"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:gravity="center"
                    android:layout_marginBottom="8dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Crea tu primera cotización tocando el botón +"
                    android:textColor="@color/text_secondary"
                    android:textSize="14sp"
                    android:gravity="center"
                    android:paddingHorizontal="32dp" />

            </LinearLayout>

        </FrameLayout>

    </ScrollView>

    <!-- FloatingActionButton dorado -->
    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fabNuevaCotizacion"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="24dp"
        android:src="@drawable/ic_add"
        app:backgroundTint="@color/gold_primary"
        app:tint="@color/black"
        app:elevation="12dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>
